@{
}

@model Books

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
        </h4>

        <span class="badge badge-pill bg-info" style="float:right">
            $@Model.Price
        </span>

    </div>

    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>Isbn: @Model.Isbn</li>
        <li>Classification: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>Page Count: @Model.PageCount pages</li>
    </ul>
</div>

<form method="post" asp-page="/Puchase">
    <span class="card-text">
        <button type="submit" class="btn btn-success btn-sm float-right">Purchase</button>
    </span>
</form>

<br />